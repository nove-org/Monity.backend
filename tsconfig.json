{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["es6"],
        "outDir": "./build",
        "strict": false,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "allowJs": true,
        "noImplicitAny": false
    },
    "exclude": ["test/**"]
}
